<div class="container signup-login">
  <div class="row justify-content-end align-items-center">

    <div class="col-5">
      <img class="card-img-top rounded-3"
        src="https://images.pexels.com/photos/10406685/pexels-photo-10406685.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
        alt="">
    </div>

    <div class="col-5">
      <div class="form">
        <form action="/auth/login" method="POST">
          <div class="container justify-content-end align-items-center">
            <h2>Log in</h2>
            <p class="mb-4">and start exploring</p>
            <div class="row p-1">
              <div class="col-5">
                <label>Username</label>
                <input class="form-control" type="text" name="username" placeholder="Your username" />
              </div>
            </div>
            <div class="row p-1">
              <div class="col-5">
                <label>Email</label>
                <input class="form-control" type="email" name="email" placeholder="Your email" />
              </div>
            </div>
            <div class="row p-1">
              <div class="col-5">
                <label>Password</label>
                <input class="form-control" type="password" name="password" placeholder="Your password" />
              </div>
            </div>
            <br />

            <button class="btn btn-dark" type="submit">Log in</button>

          </div>
          {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
          {{/if}}

        </form>
      </div>
    </div>
  </div>
</div>