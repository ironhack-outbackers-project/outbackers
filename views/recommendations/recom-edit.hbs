<section class="justify-content-center mt-5">
    <div class="container align-content-center">
        <div class="container-cards">

            <div class="card-form">
                <h2>Edit: {{recommendations.title}}</h2>
                <form action="/recommendations/{{recommendations._id}}/edit" method="post">
                    <div class="row p-2">
                        {{!-- title --}}
                        <div class="col was-validated">
                            <label>Title</label>
                            <input class="form-control" required type="text" name="title" value="{{recommendations.title}}"/>
                            <div class="invalid-feedback">Please provide a title</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- description --}}
                        <div class="col was-validated">
                            <label>Description</label>
                            <textarea class="form-control" required name="description" cols="30" rows="6"
                                placeholder="Share your experience here">{{recommendations.description}}</textarea>
                            <div class="invalid-feedback">Please provide a description</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- country --}}
                        <div class="col-7">
                            <label>Country</label>
                            
                                
                                <select class="form-control" name="country" value="{{recommendations.country}}">
                                <option selected value="{{currentCountry}}">{{currentCountry}}</option>
                                {{#each countryArr}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                                
                                
                        </div>
                        {{!-- city --}}
                        <div class="col">
                            <label>City</label>
                            <input class="form-control" type="text" name="city" value="{{recommendations.city}}">
                        </div>
                    </div>
                    <div class="row p-2 mb-3">
                        {{!-- date --}}
                        <div class="col">
                            <a href="/recommendations" class="btn btn-light">Cancel</a>
                            <button class="btn btn-dark" type="submit">Update</button>
                        </div>
                    
                    </div>


                </form>

                {{!-- error message for validation --}}
                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </div>
        </div>

    </div>
</section>