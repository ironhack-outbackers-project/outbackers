<section class="justify-content-center mt-5">
    <div class="container align-content-center">
        <div class="container-cards">

            <div class="card-form">
                <h2>Edit: {{recommendations.title}}</h2>
                <form action="/recommendations/{{recommendations._id}}/edit" method="post">
                    <div class="row p-2">
                        {{!-- title --}}
                        <div class="col was-validated">
                            <label>Title</label>
                            <input class="form-control" required type="text" name="title" />
                            <div class="invalid-feedback">Please provide a title</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- description --}}
                        <div class="col was-validated">
                            <label>Description</label>
                            <textarea class="form-control" required name="description" cols="30" rows="6"
                                placeholder="Share your experience here"></textarea>
                            <div class="invalid-feedback">Please provide a description</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- country --}}
                        <div class="col-7">
                            <label>Country</label>
                            <select name="country" class="form-control" value="{{recommendations.country}}">
                                {{#each countryArr}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{!-- city --}}
                        <div class="col">
                            <label>City</label>
                            <input class="form-control" type="text" name="city" value="{{recommendations.city}}">
                        </div>
                    </div>
                    <div class="row p-2 mb-3">
                        {{!-- date --}}
                        <div class="col">
                            <label>Date</label>
                            <input class="form-control" name="date" type="text" value="01/01/2023 - 02/01/2023" />
                        </div>
                    </div>

                    <a href="/recommendation" class="btn btn-light">Cancel</a>
                    <button class="btn btn-dark" type="submit">Create</button>
                </form>

                {{!-- error message for validation --}}
                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </div>
        </div>

    </div>
</section>