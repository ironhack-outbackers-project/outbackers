            <span><a class="nav-link active tag p-2" href="/auth/login">Login</span>
            <span><a class="nav-link active tag p-2" href="/auth/signup">Signup</a></span>
            {{/if}}
          </div>
      </div>
    </nav>
  </header>

  {{{body}}}


  {{!-- bootstrap --}}
