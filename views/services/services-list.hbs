<div class="container">
    <h2>Find your next stay or job </h2>
    <br />

    <div class="row">
        {{#each services}}
        <div class="col-12 col-md-4 card-group">
            <div class="card product">
                <img class="card-img-top p-3" src="{{image}}" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text"> Service Type: {{serviceType}}</p>
                    <a href="/services/{{_id}}" class="btn btn-primary">More Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>