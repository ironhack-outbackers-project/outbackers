<div class="container mt-5 offset-md">
    <h2 class="mb-5">Find your next stay or job </h2>

    <div class="row mb-4">
        {{#each services}}
        <div class="col-12 col-md-3 card-group">
            <div class="card product">
                <img class="card-img-top p-3" src="{{image}}" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text"> Service Type: {{serviceType}}</p>
                    <a href="/services/{{_id}}" class="btn btn-dark">More Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>