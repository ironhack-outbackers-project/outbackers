<section class="justify-content-center mt-5">
    <div class="container align-content-center">
        <div class="container-cards">

            <div class="card-form">
                <h2>Edit: {{service.title}}</h2>
                <form action="/services/{{service._id}}/edit" method="post">
                    <div class="row p-2">
                        {{!-- title --}}
                        <div class="col was-validated">
                            <label>Title</label>
                            <input class="form-control" required type="text" name="title" value="{{service.title}}" />
                            <div class="invalid-feedback">Please provide a title</div>
                        </div>
                        {{!-- service type --}}
                        <div class="col-3 was-validated">
                            <label>Service Type </label>
                            <select class="form-select" name="serviceType" value="{{service.serviceType}}">
                                <option selected value="{{serviceTypeChoosen}}">{{serviceTypeChoosen}}</option>
                                {{#each servicesTypeArr}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">Please choose one</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- description --}}
                        <div class="col was-validated">
                            <label>Description</label>
                            <textarea class="form-control" name="description" cols="30"
                                rows="6">{{service.description}}</textarea>
                            <div class="invalid-feedback">Please provide a description</div>
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- country --}}
                        <div class="col">
                            <label>Country</label>
                            <select class="form-control" name="country" value="{{service.country}}">
                                <option selected value="{{currentCountry}}">{{currentCountry}}</option>
                                {{#each countryArr}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{!-- city --}}
                        <div class="col">
                            <label>City</label>
                            <input class="form-control" type="text" name="city" value="{{service.city}}">
                        </div>
                    </div>
                    <div class="row p-2">
                        {{!-- language --}}
                        <div class="col">
                            <label>Languages</label>
                            <select multiple class="form-control" name="language" value="{{service.language}}">
                                {{#each spokenLanguages}}
                                {{#if isSpoken}}
                                <option selected value="{{this.name}}">{{this.name}}</option>
                                {{else}}
                                <option value="{{this.name}}">{{this.name}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row p-2 mb-3">
                        {{!-- date --}}
                        <div class="col">
                            <label>Date</label>
                            <input class="form-control" type="text" name="date" value="{{service.date}}" />
                        </div>
                    </div>

                    <a href="/services" class="btn btn-light">Cancel</a>
                    <button class="btn btn-dark" type="submit">Update</button>
                </form>

                {{!-- error message for validation --}}
                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </div>
        </div>

    </div>
</section>